<%= title "Recipes" %>


<% if @recipes.size > 0 %>

  <div class="row">

    <ul class="list no-bullet">
      <% if logged_in? %>
        <div class="small-12 columns truncate index-header"><h3>Your recipes</h4></div>
        <div class="small-4 columns title-index truncate"><h4>Title</h4></div>
        <div class="small-4 columns coffee-index truncate"><h4>Coffee</h4></div>
        <div class="small-4 columns water-index truncate"><h4>Water</h4></div>
        <div class="index">
          <%= render partial: "recipe", collection: current_user.recipes %>
        </div>
      <% end %>

      <div class="small-12 columns truncate index-header"><h3>All recipes</h3></div>
      <div class="small-4 columns title-index truncate"><h4>Title</h4></div>
      <div class="small-4 columns coffee-index truncate"><h4>Coffee</h4></div>
      <div class="small-4 columns water-index truncate"><h4>Water</h4></div>

      <div class="index">
        <%= render partial: "recipe", collection: @recipes.sort { |a,b| a.title.downcase <=> b.title.downcase } %>
      </div>
    </ul>
  </div>


<% else %>
  <%= render partial: 'blank_slate' %>
<% end %>
